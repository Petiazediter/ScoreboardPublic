<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FragmentHeader">
        <item name="android:textSize">25dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="FragmentButton">
        <item name="android:textColor">@color/buttonBlue</item>
        <item name="textAllCaps">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="details">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_mini</item>
        <item name="android:padding">@dimen/margin_mini</item>
    </style>

    <style name="DetailsPage">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>

    </style>

    <style name="DetailsPage.Header">
        <item name="android:shadowRadius">10</item>
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
    </style>

    <style name="DetailsPage.SubHeader">
        <item name="android:shadowRadius">5</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="DetailsPage.Context">
        <item name="android:shadowRadius">2</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-condensed-light</item>
    </style>

</resources>