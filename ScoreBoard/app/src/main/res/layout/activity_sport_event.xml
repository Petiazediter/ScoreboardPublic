<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_mini"
    android:background="@color/dark_br"
    tools:context=".sport_events.details.SportEventDetailsActivity">

    <TextView
        android:id="@+id/description"
        android:padding="@dimen/margin_mini"
        android:layout_width="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:padding="@dimen/margin_mini"
        android:layout_width="371dp"
        android:layout_height="104dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:srcCompat="@drawable/logo" />

     <TextView
         android:id="@+id/id"
         app:layout_constraintTop_toBottomOf="@id/imageView"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         android:hint="@string/id"
         style="@style/details" />

    <TextView
        android:id="@+id/date"
        app:layout_constraintTop_toBottomOf="@id/id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/date"
        style="@style/details" />

    <TextView
        android:id="@+id/homeTeam"
        style="@style/details"
        app:layout_constraintTop_toBottomOf="@id/date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/hometeam"
        />

    <TextView
        android:id="@+id/awayTeam"
        style="@style/details"
        app:layout_constraintTop_toBottomOf="@id/homeTeam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="@string/awayteam"
        />


</androidx.constraintlayout.widget.ConstraintLayout>